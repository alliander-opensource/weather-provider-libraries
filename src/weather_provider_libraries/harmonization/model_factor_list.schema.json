{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "description": "The JSON Schema for a list of model factors",
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z0-9_ ]+$": {
      "type": "object",
      "properties": {
        "eccodesID": {
          "type": "integer",
            "description": "The eccodes id matching the model factor"
        },
        "units": {
          "type": "string",
          "description": "The units of the model factor"
        }
      },
      "required": ["units"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}