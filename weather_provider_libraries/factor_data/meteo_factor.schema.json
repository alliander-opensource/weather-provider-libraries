{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A representation of ECCODES GRIB2 meteorological field definitions with units, names and other metadata",
  "type": "object",
  "patternProperties": {
    "^[0-9]+$": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "shortName": {
          "type": "string",
		  "minLength": 2,
		  "maxLength": 8
        },
        "description": {
          "type": "string"
        },
        "unit": {
          "type": "string"
        },
        "harmonisationName": {
          "type": "string"
        }
      },
      "required": ["name", "shortName", "unit"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
